{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "EdgerOS 应用名称"
    },
    "bundleid": {
      "type": "string",
      "title": "EdgerOS 应用包名（Bundle ID）"
    },
    "test": {
      "type": "string",
      "title": "测试脚本入口"
    },
    "ignore_modules": {
      "type": "array",
      "title": "打包文件的@edgeros包过滤数组",
      "description": "过滤不需要参与打包的@edgeros包名",
      "items": {
        "type": "string"
      },
      "additionalItems": false,
      "uniqueItems": true
    },
    "ignore_path": {
      "type": "array",
      "title": "打包文件的过滤器数组",
      "description": "过滤不需要参与打包的其它项目文件",
      "items": {
        "type": "string"
      },
      "additionalItems": false,
      "uniqueItems": true
    },
    "assets": {
      "type": "object",
      "title": "资源文件集",
      "description": "定义图片等资源文件的路径，通过名称被其它部分引用",
      "properties": {
        "ico_big": {
          "type": "string",
          "title": "EdgerOS 应用的桌面大图标"
        },
        "ico_small": {
          "type": "string",
          "title": "EdgerOS 应用的桌面小图标"
        },
        "splash": {
          "type": "string",
          "title": "EdgerOS 应用的欢迎页图片资源文件"
        }
      }
    },
    "program": {
      "type": "object"
    },
    "loading": {
      "type": "object",
      "properties": {
        "splash": {
          "type": "string",
          "title": "EdgerOS 应用的欢迎页图片",
          "description": "通过 'assets' 部分定义资源名称引用对应的图片资源"
        },
        "background": {
          "type": "string",
          "title": "EdgerOS 应用的欢迎页图片背景色",
          "description": "使用 Web 标准的色彩定义格式，如'#rrggbb'"
        },
        "animation": {
          "type": "string",
          "title": "EdgerOS 应用的欢迎页图片的动画效果",
          "description": "目前仅支持 `enlarge` 或 `none`"
        }
      },
      "defaultSnippets": [
        {
          "splash": "splash",
          "description": "#000000",
          "animation": "enlarge"
        }
      ]
    },
    "vendor": {
      "type": "object",
      "title": "EdgerOS 应用的供应商详细信息"
    },
    "update": {
      "type": "object"
    },
    "widget": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ico": {
            "type": "string",
            "title": "小部件的预览图片",
            "description": "通过 'assets' 部分定义资源名称引用对应的图片资源"
          }
        }
      }
    }
  },
  "required": [
    "ignore_modules",
    "ignore_path",
    "assets",
    "program",
    "vendor"
  ],
  "additionalProperties": false
}